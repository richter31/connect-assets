{
  "name": "connect-assets",
  "version": "5.1.2",
  "author": "Andrew Dunkman <andrew@dunkman.org>",
  "description": "A Rails-like asset pipeline for Connect",
  "license": "MIT",
  "contributors": [
    {
      "name": "Trevor Burnham",
      "email": "trevorburnham@gmail.com",
      "url": "http://trevorburnham.com/"
    },
    {
      "name": "Andrew Dunkman",
      "email": "andrew@dunkman.org"
    },
    {
      "name": "Dusty Burwell",
      "email": "dustyburwell@gmail.com"
    },
